# Makefile for school project

# Compiler
CC = gcc

# Source files
SRC = $(wildcard *.c)

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = /bin/rm -f

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

# Default target
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

# Rule to compile source files
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Cleaning rules
clean:
	$(RM) $(NAME) *~ $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: clean oclea

